@model PL.ViewModels.Categories.CategoryCreateEditViewModel

@{
    ViewData["Title"] = "Edit Category";
}

<h1>Edit Category</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" /> @* مهم عشان الـ Id يتبعت مع الـ Form للـ Edit *@

            @* هنا بنستخدم الـ Partial View اللي عملناها *@
            <partial name="PartialViews/_CategoryForm" model="Model" />

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}