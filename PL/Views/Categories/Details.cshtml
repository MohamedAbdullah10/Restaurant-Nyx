@model PL.ViewModels.Categories.CategoryViewModel

@{
    ViewData["Title"] = "Category Details";
}

<h1>Category Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name) @* استخدام DisplayNameFor *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name) @* استخدام DisplayFor *@
        </dd>
        @* لو عايز تعرض ActiveItemsCount في الـ Details *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActiveItemsCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActiveItemsCount)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a> @* تغيير btn-warning لـ btn-info للاتساق *@
    <a asp-action="Index" class="btn btn-secondary">Back to List</a> @* تغيير النص لـ Back to List للاتساق *@
</div>