@model PL.ViewModels.Categories.CategoryViewModel

@{
    ViewData["Title"] = "Delete Category";
}

<h1>Delete Category</h1>

<h3>Are you sure you want to delete this?</h3> @* تغيير الرسالة لتكون أوضح *@

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt> @* استخدام DisplayNameFor لأفضل ممارسات *@
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd> @* استخدام DisplayFor *@
    </dl>
</div>

<form asp-action="Delete" method="post"> @* تعديل الـ asp-action ليتوافق مع Controller *@
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div> @* لعرض أخطاء زي "Cannot delete category" *@
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a> @* تغيير النص لـ Cancel *@
</form>